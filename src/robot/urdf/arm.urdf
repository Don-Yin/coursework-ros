<?xml version="1.0"?>
<robot name="improved_robot">

  <disable_collisions link1="rotator1" link2="pivot1" reason="Adjacent" />
  <disable_collisions link1="pivot1" link2="arm1" reason="Adjacent" />
  <disable_collisions link1="arm1" link2="pivot1b" reason="Adjacent" />
  <disable_collisions link1="pivot1b" link2="arm1b" reason="Adjacent" />
  <disable_collisions link1="arm1b" link2="pivot2" reason="Adjacent" />
  <disable_collisions link1="pivot2" link2="arm2" reason="Adjacent" />
  <disable_collisions link1="arm2" link2="sphere" reason="Adjacent" />
  <disable_collisions link1="sphere" link2="needle" reason="Adjacent" />


  <link name="base_link">
    <visual>
      <geometry>
        <box size="4 4 1" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="4 4 1" />
      </geometry>
    </collision>
  </link>

  <link name="rotator1">
    <visual>
      <geometry>
        <cylinder radius="2" length="1" />
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="2" length="1" />
      </geometry>
    </collision>
  </link>

  <link name="pivot1">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder radius="1" length="2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder radius="1" length="2" />
      </geometry>
    </collision>
  </link>

  <link name="arm1">
    <visual>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
      <origin xyz="0 0 3.75" rpy="0 0 0" />
      <geometry>
        <cylinder radius="1" length="6" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 3.75" rpy="0 0 0" />
      <geometry>
        <cylinder radius="1" length="6" />
      </geometry>
    </collision>
  </link>

  <link name="pivot1b">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder radius="1" length="2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder radius="1" length="2" />
      </geometry>
    </collision>
  </link>

  <link name="arm1b">
    <visual>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
      <origin xyz="0 0 3.75" rpy="0 0 0" />
      <geometry>
        <cylinder radius="1" length="6" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 3.75" rpy="0 0 0" />
      <geometry>
        <cylinder radius="1" length="6" />
      </geometry>
    </collision>
  </link>

  <link name="pivot2">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder radius="1" length="2" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.57 0" />
      <geometry>
        <cylinder radius="1" length="2" />
      </geometry>
    </collision>
  </link>

  <link name="arm2">
    <visual>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
      <origin xyz="0 0 4" rpy="0 0 0" />
      <geometry>
        <cylinder radius="1" length="6" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 4" rpy="0 0 0" />
      <geometry>
        <cylinder radius="1" length="6" />
      </geometry>
    </collision>
  </link>

  <link name="sphere">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0" />
      </geometry>
    </collision>
  </link>

  <link name="needle">
    <visual>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="3" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 1" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.05" length="3" />
      </geometry>
    </collision>
  </link>

  <link name="needle_tip">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.1" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.1" />
      </geometry>
    </collision>
  </link>


  <joint name="base_link_to_rotator1" type="continuous">
    <origin xyz="0 0 1" rpy="0 0 0" />
    <axis xyz="0 0 1" />
    <parent link="base_link" />
    <child link="rotator1" />
  </joint>

  <joint name="rotator1_to_pivot1" type="fixed">
    <origin xyz="0 0 1.5" rpy="0 0 0" />
    <parent link="rotator1" />
    <child link="pivot1" />
  </joint>

  <joint name="pivot1_to_arm1" type="revolute">
    <parent link="pivot1" />
    <child link="arm1" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1" />
  </joint>

  <joint name="arm1_to_pivot1b" type="continuous">
    <parent link="arm1" />
    <child link="pivot1b" />
    <origin xyz="0 0 7.5" rpy="0 0 0" />
    <axis xyz="0 0 1" />
  </joint>
  <joint name="pivot1b_to_arm1b" type="revolute">
    <parent link="pivot1b" />
    <child link="arm1b" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1" />
  </joint>
  <joint name="arm1b_to_pivot2" type="continuous">
    <parent link="arm1b" />
    <child link="pivot2" />
    <origin xyz="0 0 7.5" rpy="0 0 0" />
    <axis xyz="0 0 1" />
  </joint>
  <joint name="pivot2_to_arm2" type="revolute">
    <parent link="pivot2" />
    <child link="arm2" />
    <axis xyz="1 0 0" />
    <limit lower="-1.57" upper="1.57" effort="30" velocity="1" />
  </joint>
  <joint name="arm2_to_sphere" type="fixed">
    <origin xyz="0 0 7.5" rpy="0 0 0" />
    <parent link="arm2" />
    <child link="sphere" />
  </joint>

  <joint name="sphere_to_needle" type="fixed">
    <origin xyz="0 0 1" rpy="0 0 0" /> <!-- Modify xyz values for position -->
    <parent link="sphere" />
    <child link="needle" />
  </joint>

  <joint name="needle_to_needle_tip" type="fixed">
    <origin xyz="0 0 2.5" rpy="0 0 0" /> <!-- Modify xyz values for position -->
    <parent link="needle" />
    <child link="needle_tip" />
  </joint>

</robot>